# UniOne region: "eu" (default) or "us"
UNIONE_REGION=eu

# Server configuration
PORT=4050
LOG_LEVEL=info

# CORS allowed origins (comma-separated)
# Required for cross-origin requests to work
ALLOWED_ORIGINS=https://example.com,https://app.example.com

# =============================================================================
# Rate Limiting
# =============================================================================

# Enable/disable rate limiting (default: true)
# Set to "false" to disable in development
RATE_LIMIT_ENABLED=true

# Rate limit for email-sending endpoints (requests per minute per IP)
# Applies to: POST /v3/:domain/messages, POST /api/v1/emails, POST /api/v1/emails/batch
RATE_LIMIT_SEND_PER_MINUTE=60

# Rate limit for health check endpoint (requests per minute per IP)
# More generous for monitoring tools that poll frequently
RATE_LIMIT_HEALTH_PER_MINUTE=120

# Global rate limit fallback (requests per minute per IP)
# Applies to all other endpoints
RATE_LIMIT_GLOBAL_PER_MINUTE=200

# =============================================================================
# Authentication
# =============================================================================

# Mailgun-compatible API (/v3)
# Format: Authorization: Basic base64(provider:apikey)
# Examples:
#   resend:re_xxxxxxxxxxxx
#   unione:your-unione-api-key

# Universal API (/api/v1)
# Format: Authorization: Bearer <apikey> + X-Provider: <provider>
# Or: X-API-Key: <apikey> + X-Provider: <provider>
# Examples:
#   Authorization: Bearer re_xxxxxxxxxxxx
#   X-Provider: resend
